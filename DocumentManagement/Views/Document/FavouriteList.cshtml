@model IEnumerable<DocumentManagement.ModelViews.Document.CabinetTileModelView>
<link href="~/css/Document/folder.min.css" rel="stylesheet" />
@if (Model.Any())
{
    foreach (var file in Model)
    {
        if (file.IsFile == true)
        {
            <div class="ContentBox" oncontextmenu="return false">
                    <div class="box" data-fileid="@file.FileId" data-type="0" data-encid="@file.EncryptFildId" data-id="@file.Id">
                        @if (file.FileType == 1)
                        {
                            <span class="k-icon k-i-image color-image"></span>
                        }
                        else if (file.FileType == 2)
                        {
                            <span class="k-icon k-i-pdf color-pdf"></span>
                        }
                        else if (file.FileType == 3)
                        {
                            <span class="k-icon k-i-word color-word"></span>
                        }
                        else if (file.FileType == 4)
                        {
                            <span class="k-icon k-i-txt color-text"></span>
                        }
                        else if (file.FileType == 5)
                        {
                            <span class="k-icon k-i-ppt color-ppt"></span>
                        }
                        else if (file.FileType == 6)
                        {
                            <span class="k-icon k-i-excel color-excel"></span>
                        }
                        <br />
                        @file.Name
                    </div>
                </div>
        }
        else
        {
            <div class="ContentBox" oncontextmenu="return false">
                <div class="box" data-folderid="@file.FolderId" data-type="@file.FolderType" data-id="@file.Id">
                    @if (file.FolderType == 1)
                    {
                        <img src="~/images/icon/cabinet.png" />
                    }
                    else
                    {
                        <span class="k-icon k-i-folder color-folder"></span>
                    }
                    <br />
                    @file.Name
                </div>
            </div>
        }
    }
}
else
{
<div class="col-md-12" id="divEmpty">
    <h5>There is no record to display</h5>
</div>
}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>



